<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/grey">

        <ImageView
            android:id="@+id/character_photo"
            android:contentDescription="@string/imageDescription"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_picture"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/character_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ROY"
                android:textSize="@dimen/titleSize"
                android:textStyle="bold"
                android:textColor="@color/textWhite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center">

                <ImageView
                    android:id="@+id/life_status_identifier"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/background_identifier"/>

                <TextView
                    android:id="@+id/life_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Alive"
                    android:textSize="@dimen/descriptionSize"
                    android:textColor="@color/textWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="@dimen/descriptionSize"
                    android:textColor="@color/textWhite"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"/>

                <TextView
                    android:id="@+id/species"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Human"
                    android:textSize="@dimen/descriptionSize"
                    android:textColor="@color/textWhite"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last known location:"
                android:textSize="@dimen/descriptionSize"
                android:textColor="@color/textGrey"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/origin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roy: A Life Well Lived"
                android:textSize="@dimen/descriptionSize"
                android:textColor="@color/textWhite"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="First Seen in:"
                android:textSize="@dimen/descriptionSize"
                android:textColor="@color/textGrey"/>

            <TextView
                android:id="@+id/first_seen_episode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mortynight Run"
                android:textSize="@dimen/descriptionSize"
                android:textColor="@color/textWhite"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>